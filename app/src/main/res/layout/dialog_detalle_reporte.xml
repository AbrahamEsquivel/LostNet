<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imgDetalle"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#EEEEEE"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txtDetalleCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ElectrÃ³nica"
                    android:textColor="#1565C0"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/txtDetalleDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Objeto"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Contacto:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtDetalleEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="usuario@email.com"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/txtDetalleTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tel: 449-XXX-XXXX"
                        android:textColor="#333333"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’ Pregunta de Seguridad:"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/txtDetallePregunta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¿Color?"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtDetalleRespuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respuesta: ***"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:textColor="#757575"/>

                <Button
                    android:id="@+id/btnEliminarDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ELIMINAR REPORTE"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnCerrarDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>