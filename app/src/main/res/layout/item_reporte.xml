<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgReporte"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objeto Perdido"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: PERDIDO"
                android:textColor="#D32F2F"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txtPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”’ P: Â¿Color?"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”‘ R: Rojo"
                android:textSize="14sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/txtCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a: ElectrÃ³nica"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:textStyle="italic"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Reporte"
                android:backgroundTint="#FF5252"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txtIdOculto"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>